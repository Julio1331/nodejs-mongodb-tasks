<form
  action="/tasks/{{task._id}}/edit"
  method="POST"
>{{! con el :id recibo el _id del del dato que estoy modificando en la bd}}
  <input type="text" name="title" value="{{task.title}}" />
  <textarea
    name="description"
    rows="3"
    placeholder="Add a description"
  >{{task.description}}
  </textarea>
  <button>Update</button>
</form>